@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix mod: <http://moddevices.com/ns/mod#>.
@prefix modgui: <http://moddevices.com/ns/modgui#>.
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix midi: <http://lv2plug.in/ns/ext/midi#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .
@prefix pprop: <http://lv2plug.in/ns/ext/port-props#> .

<http://moddevices.com/plugins/mod-devel/mod-hmi-led-machine>
    a lv2:Plugin, mod:UtilityPlugin;

    doap:name "LED Machine";
    doap:license "GPL v2+";
    doap:developer [
        foaf:name "Jan Janssen";
        foaf:homepage <>;
        foaf:mbox <mailto:jan@moddevices.com>;
    ];

    doap:maintainer [
        foaf:name "MOD";
        foaf:homepage <http://moddevices.com>;
        foaf:mbox <mailto:jan@moddevices.com>;
    ];

    lv2:requiredFeature <http://moddevices.com/ns/hmi#WidgetControl>;
    lv2:extensionData <http://moddevices.com/ns/hmi#PluginNotification>;

    lv2:minorVersion 3;
    lv2:microVersion 0;

    rdfs:comment """
A plugin for demonsration perposes on how to control the LEDS by using the MOD HMI widgets
The plugin features 2 assignable toggles, these toggles are the assignmets of which the LED state will be manipulated. the rest of the controls relate to these 2 LED's
    """;

    lv2:port 
    [
        a lv2:InputPort, lv2:CVPort, mod:CVPort;
        lv2:index 0;
        lv2:symbol "CVINP";
        lv2:name "CV Input";
    ]
    ,
    [
        a lv2:InputPort, lv2:AudioPort;
        lv2:index 1;
        lv2:symbol "AUDIOIN";
        lv2:name "Audio Input";
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 2;
        lv2:symbol "TOGGLE";
        lv2:name "Test Toggle";
        lv2:portProperty lv2:integer, lv2:toggled;
        lv2:default 0;
        lv2:minimum 0;
        lv2:maximum 1;
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 3;
        lv2:symbol "COLOR";
        lv2:name "Color";
        lv2:portProperty lv2:enumeration , lv2:integer ;
        lv2:default 1 ;
        lv2:minimum 1 ;
        lv2:maximum 8 ;
        lv2:scalePoint
        [
            rdfs:label "Red" ;
            rdf:value 1 
        ] , [
            rdfs:label "Green" ;
            rdf:value 2 
        ] , [
            rdfs:label "Blue" ;
            rdf:value 3 
        ] , [
            rdfs:label "Cyan" ;
            rdf:value 4
        ], [
            rdfs:label "Magenta" ;
            rdf:value 5
        ], [
            rdfs:label "Magenta" ;
            rdf:value 6
        ], [
            rdfs:label "Yellow" ;
            rdf:value 7
        ], [
            rdfs:label "White" ;
            rdf:value 8
        ]
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 4;
        lv2:symbol "LED_MODE";
        lv2:name "Led Mode";
        lv2:portProperty lv2:enumeration , lv2:integer ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:scalePoint
        [
            rdfs:label "Blink" ;
            rdf:value 0
        ] , [
            rdfs:label "Brightness" ;
            rdf:value 1 
        ]
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 5;
        lv2:symbol "BLINK_MODE";
        lv2:name "Blink Mode";
        lv2:portProperty lv2:enumeration , lv2:integer ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:scalePoint
        [
            rdfs:label "Manual" ;
            rdf:value 0
        ] , [
            rdfs:label "Sync" ;
            rdf:value 1 
        ]
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 6;
        lv2:symbol "ON_TIME";
        lv2:name "on-time";
        lv2:default 100 ;
        lv2:minimum 10 ;
        lv2:maximum 5000 ;
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 7;
        lv2:symbol "OFF_TIME";
        lv2:name "off-time";
        lv2:default 100 ;
        lv2:minimum 10 ;
        lv2:maximum 5000 ;
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 8;
        lv2:symbol "SYNC_BLINK_MODE";
        lv2:name "Blink Sync";
        lv2:portProperty lv2:enumeration , lv2:integer ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 2 ;
        lv2:scalePoint
        [
            rdfs:label "Slow" ;
            rdf:value 0
        ] , [
            rdfs:label "Mid" ;
            rdf:value 1 
        ]
        , [
            rdfs:label "Fast" ;
            rdf:value 2
        ]
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 9;
        lv2:symbol "BRIGHTNESS_MODE";
        lv2:name "Brightness Mode";
        lv2:portProperty lv2:enumeration , lv2:integer ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 3 ;
        lv2:scalePoint
        [
            rdfs:label "Manual control" ;
            rdf:value 0
        ] , [
            rdfs:label "Manual list" ;
            rdf:value 1 
        ], [
            rdfs:label "Audio level" ;
            rdf:value 2 
        ]
        , [
            rdfs:label "CV level" ;
            rdf:value 3 
        ]
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 10;
        lv2:symbol "BRIGHTNESS";
        lv2:name "Brightness";
        lv2:default 100 ;
        lv2:minimum 0.1 ;
        lv2:maximum 100 ;
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 11;
        lv2:symbol "BRIGHTNESS_LIST";
        lv2:name "Brightness List";
        lv2:portProperty lv2:enumeration , lv2:integer ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 2 ;
        lv2:scalePoint
        [
            rdfs:label "Low" ;
            rdf:value 0
        ] , [
            rdfs:label "Mid" ;
            rdf:value 1 
        ]
        , [
            rdfs:label "High" ;
            rdf:value 2 
        ]
    ]
    ,
    [
        a lv2:InputPort, lv2:ControlPort;
        lv2:index 12;
        lv2:symbol "UPDATE";
        lv2:name "Update";
        lv2:portProperty lv2:integer, lv2:toggled, pprop:trigger;
        lv2:default 0;
        lv2:minimum 0;
        lv2:maximum 1;
    ]
.
